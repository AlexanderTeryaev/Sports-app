@model AppModel.Activity

@{
    Layout = null;
}

<style>
    h1 {
        left: 0;
        line-height: 200px;
        margin-top: -100px;
        position: absolute;
        text-align: center;
        top: 50%;
        width: 100%;
    }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Loglig - Activity Form</title>
</head>
<body>
    <h1>
        @switch (Model.ActivityId)
        {
            case 7938:
                @(string.Format(Messages.Activity7938_UnpublishedForm, Model.ActivityForms.FirstOrDefault()?.Name ?? Model.Name))
                break;

            default:
                @(string.Format(Messages.Activity_UnpublishedForm, Model.ActivityForms.FirstOrDefault()?.Name ?? Model.Name))
                break;
        }
    </h1>
</body>
</html>
