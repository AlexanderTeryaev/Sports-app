@model ActivityModel

<div id="custom-personal-settings" style="display: @(Model.ActivityFormType == ActivityFormType.CustomPersonal && Model.UnionId != null && Model.ClubId == null ? "block" : "none");">

@if (Model.UnionId == 15)
{
    <div class="form-group col-sm-12 well well-sm">
        <label class="control-label col-sm-6">
            @Messages.Activity_PaymentMethod:
        </label>
        <div class="col-sm-6">
            <div>
                <label>@Html.RadioButtonFor(x => x.PaymentMethod, ActivityPaymentMethod.CardCom) @Messages.Activity_PaymentMethod_CardCom</label>
            </div>
            <div>
                <label>@Html.RadioButtonFor(x => x.PaymentMethod, ActivityPaymentMethod.PayPal) @Messages.Activity_PaymentMethod_PayPal</label>
            </div>
        </div>
    </div>
}

<div id="select-leagues" class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.RestrictLeagues, new { @class = "restrict-leagues" }) @Messages.Activity_SelectLeagues:
    </label>
    <select multiple="multiple" @(!Model.RestrictLeagues ? "disabled" : "") class="form-control restrict-leagues-dropdown">
        @*<option value="" disabled="disabled">@Messages.Select</option>*@
        @foreach (var league in Model.Leagues)
        {
            <option value="@league.LeagueId" @(Model.RestrictedLeagues.Any(x => x.LeagueId == league.LeagueId) ? "selected" : "")>@league.Name</option>
        }
    </select>
    @Html.HiddenFor(x => x.RestrictedLeaguesJson)
</div>
    
@if (Model.IsIndividualSection)
{
    <div class="form-group col-sm-12">
        <label class="control-label">
            @Html.CheckBoxFor(x => x.RegistrationsByCompetitionsCategory) @Messages.Activity_RegistrationsByCompetitionsCategory
        </label>
    </div>
}

<div class="form-group col-sm-12 well well-sm">
    <label class="control-label col-sm-6">
        @Messages.Activity_RegistrationForMembers:
    </label>
    <div class="col-sm-6">
        <div>
            <label>@Html.RadioButtonFor(x => x.RegistrationForMembers, RegistrationForMembers.Both) @Messages.Activity_RegistrationForMembers_Both</label>
        </div>
        <div>
            <label>@Html.RadioButtonFor(x => x.RegistrationForMembers, RegistrationForMembers.OnlyCompetitive) @Messages.Activity_RegistrationForMembers_OnlyCompetitive</label>
        </div>
        <div>
            <label>@Html.RadioButtonFor(x => x.RegistrationForMembers, RegistrationForMembers.OnlyRegular) @Messages.Activity_RegistrationForMembers_OnlyRegular</label>
        </div>
    </div>
</div>

<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(x => x.ForbidToChangeNameForExistingPlayers) @Messages.Activity_ForbidToChangeNameForExistingPlayers
    </label>
</div>

<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.DoNotAllowDuplicateRegistrations) @Messages.Activity_DoNotAllowDuplicateRegistrations
    </label>
</div>

<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.AllowOnlyApprovedMembers) @Messages.Activity_AllowOnlyApprovedMembers
    </label>
</div>

<div class="form-group col-sm-12">
    <label class="control-label">
