</div>

<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.RegistrationPrice) @Messages.Activity_EnableRegistrationPrice
    </label>
</div>
<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.InsurancePrice) @Messages.Activity_EnableInsurancePrice
    </label>
</div>
<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.MembersFee) @Messages.Activity_EnableMembersFee
    </label>
</div>
<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.HandlingFee) @Messages.Activity_EnableHandlingFee
    </label>
</div>
<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.AllowNoRegistrationPayment) @Messages.Activity_AllowNoRegistrationPayment
    </label>
</div>
<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.AllowNoInsurancePayment) @Messages.Activity_AllowNoInsurancePayment
    </label>
</div>
<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.AllowNoFeePayment) @Messages.Activity_AllowNoFeePayment
    </label>
</div>
<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.AllowNoHandlingFeePayment) @Messages.Activity_AllowNoHandlingFeePayment
    </label>
</div>
<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.NoPriceOnBuiltInRegistration) @Messages.Activity_NoPriceOnBuiltInRegistration
    </label>
</div>
<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.AllowEscortRegistration) @Messages.Activity_AllowEscortRegistration
    </label>
</div>
<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.ShowOnlyApprovedTeams) @Messages.Activity_ShowOnlyApprovedTeams
    </label>
</div>

@if (Model.UnionId == 38)
{
    <div class="form-group col-sm-12">
        <label class="control-label">
            @Html.CheckBoxFor(m => m.CheckCompetitionAge) @Messages.Activity_CheckCompetitionAge
        </label>
    </div>
    <div class="form-group col-sm-12">
        <label class="control-label">
            @Html.CheckBoxFor(m => m.RestricGendersByTeams) @Messages.Activity_RestrictGendersByTeam
        </label>
    </div>
}
<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.RestricGenders) @Messages.Activity_RestrictGenders
    </label>
</div>


<div class="form-group col-sm-12">
    <label class="control-label">
        @Html.CheckBoxFor(m => m.RestrictLeaguesByAge) @Messages.Activity_RestrictLeaguesByAge
    </label>
</div>

<div class="form-group col-sm-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Messages.Activity_Discounts</h3>
        </div>
        <div class="panel-body">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@Messages.Activity_UnionApprovedPlayer</h3>
                </div>
                <div class="panel-body">
                    @Html.LabelFor(x => x.UnionApprovedPlayerDiscountAmount, Messages.Activity_UnionApprovedPlayer_DiscountAmount)
                    @if (ViewBag.IsReadOnly == true)
                    {
                        @Html.TextBoxFor(x => x.UnionApprovedPlayerDiscountAmount, new { @class = "form-control", @readonly = "readonly", disabled = "disabled" })

                        @Html.CheckBoxFor(x => x.UnionApprovedPlayerNoInsurancePayment, new { @readonly = "readonly", disabled = "disabled" })
                    }
                    else
                    {
                        @Html.TextBoxFor(x => x.UnionApprovedPlayerDiscountAmount, new { @class = "form-control" })

                        @Html.CheckBoxFor(x => x.UnionApprovedPlayerNoInsurancePayment)
                    }

                    @Html.LabelFor(x => x.UnionApprovedPlayerNoInsurancePayment, Messages.Activity_UnionApprovedPlayer_NoInsurance)
                </div>
            </div>

            <div id="escort-discount-settings" class="panel panel-default" style="display: @(Model.AllowEscortRegistration ? "block" : "none");">
                <div class="panel-heading">
                    <h3 class="panel-title">@Messages.Activity_EscortDiscount</h3>
                </div>
                <div class="panel-body">
                    @Html.LabelFor(x => x.EscortDiscountAmount, Messages.Activity_EscortDiscount_DiscountAmount)
                    @if (ViewBag.IsReadOnly == true)
                    {
                        @Html.TextBoxFor(x => x.EscortDiscountAmount, new { @class = "form-control", @readonly = "readonly", disabled = "disabled" })

                        @Html.CheckBoxFor(x => x.EscortNoInsurancePayment, new { @readonly = "readonly", disabled = "disabled" })
                    }
                    else
                    {
                        @Html.TextBoxFor(x => x.EscortDiscountAmount, new { @class = "form-control" })

                        @Html.CheckBoxFor(x => x.EscortNoInsurancePayment)
                    }

                    @Html.LabelFor(x => x.EscortNoInsurancePayment, Messages.Activity_EscortDiscount_NoInsurance)
                </div>
            </div>
        </div>
    </div>
</div>
</div>