                                                     })"
                                   class="btn btn-primary"
                                   data-ajax-update="#rotesmodal_pl"
                                   data-toggle="modal"
                                   data-target="#rotesmodal"
                                   data-ajax="true">
                                    <span class="fa fa-edit"></span>
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-primary" href="@Url.Action("PlayersTeamRegistrationList", "Clubs", new
