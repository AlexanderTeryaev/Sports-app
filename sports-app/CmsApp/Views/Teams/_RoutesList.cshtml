                    </thead>
                    <tbody>
                        @if (Model.TeamsRoutes != null && Model.TeamsRoutes.Any())
                        {
                            foreach (var route in Model.TeamsRoutes)
                            {
                        <tr>
                            <td>
                                <a href="@Url.Action("EditTeamRoute", "Teams",
                                                     new
                                                     {
