@{ 
    bool fromExcel = ViewBag.FromExcel ?? false;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"></span></button>
    <h4 class="modal-title">@Messages.PlayerExport_FormTitle</h4>
</div>

<div id="editplayerformbody">
    <div class="row">
        <div class="col-md-12">

            @if (ViewBag.ExportResult == true)
            {
                <div class="alert alert-success">
                    @if (fromExcel) {@Messages.PlayerExport_SuccessResult}else{@Messages.OfficialsExport_Success} - <a class="text-danger" href="@Url.Action("DownloadExportFile", "Jobs")">@Messages.Download</a>
                </div>
            }
            else
            {
                <div class="alert alert-danger">@Messages.PlayerExport_ErrorResult  @if (ViewBag.ErrorMessage != null) { <span>@ViewBag.ErrorMessage</span> }</div>
            }
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">@Messages.Close</button>
</div>