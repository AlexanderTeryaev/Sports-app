@model AddTeamToSchoolModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="@Messages.Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" id="addSchoolModalLabel">@(Model.IsCamp ? Messages.AddTeamToCamp : Messages.AddTeamToSchool)</h4>
</div>
<div class="modal-body">
    @using (Html.BeginForm("AddTeamToSchool", "Clubs", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.SchoolId)
        @Html.LabelFor(x => x.NewTeamName, Messages.AddTeamToSchool_NewTeamName)
        <div class="form-inline">
            @Html.TextBoxFor(x => x.NewTeamName, new {@class = "form-control"})
            <button type="submit" class="btn btn-primary">@Messages.Save</button>
        </div>
    }

