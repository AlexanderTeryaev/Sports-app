    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"></span></button>
        <h4 class="modal-title">@Messages.TotoReport</h4>
    </div>

    <div class="modal-body">
         <p style="text-align:center;"><a class="text-success" href="@Url.Action("DownloadExportToto","Clubs")">@Messages.Download</a></p>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">@Messages.Close</button>
    </div>
<script>
        $("#importtotoform").on("hidden.bs.modal", function () {

            var modalData = $(this).data('bs.modal');
                if (modalData && modalData.options.remote) {
                    $(this).removeData('bs.modal');
                    var modalContent = $(this).find(".modal-content");
                    modalContent.empty();
                    modalContent.html('<div class="modal-body"><p style="text-align:center;"><span class="fa fa-spin fa-spinner"> </span>@Messages.Loading</p></div>');
                }
        });
</script>

