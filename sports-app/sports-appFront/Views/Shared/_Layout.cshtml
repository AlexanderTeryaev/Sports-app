@using Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    @Styles.Render("~/style/css")
    @if (Messages.Direction == "rtl")
    {      
        @Styles.Render("~/Content/css/bootstrap-rtl.css")
        /*
        @Styles.Render("~/content/style/rtl")
        */
    }
    @Scripts.Render("~/Resources/Messages.js")
    @if (Messages.Lang == "he")
    {
        /*
        @Scripts.Render("~/bundles/js/he")
        */
    }
    @RenderSection("header", required: false)
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>
<body>
<div id="navbar" class="navbar-collapse collapse">
    <div class="flags">
        <a href='@Url.Action("SetCulture", "Common", new { lang = "he"})' class="he" title="עברית"></a>
        <a href='@Url.Action("SetCulture", "Common", new { lang = "en"})' class="en" title="english"></a>
        <a href='@Url.Action("SetCulture", "Common", new { lang = "uk"})' class="ua" title="Український"></a>
    </div>
</div>
    <div class="container body-content">
        <div class="row">
            <div class="col-sm-12" id="render-body">
                @RenderBody()
            </div>
        </div>
        <footer>
            <div class="pull-left bot-title">Powered By</div>
            <img src="@Url.Content("~/content/img/logo.png")" class="pull-left bot-logo" alt="Powered By LogLig" />
            <div class="clearfix"></div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/main")
    <script>
        $(function () {
            frontLib.init();
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
